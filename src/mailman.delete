#!/usr/bin/perl 

use strict;

my ($listname) = @ARGV;

my $M_PATH = "/var/lib/mailman/bin/rmlist";

if (!$listname) {
    print "Usage: mailman.delete <listname>\n";
    exit(1);
}

$ENV{PATH} = "";
delete @ENV{'IFS', 'CDPATH', 'ENV', 'BASH_ENV'};

$< = $>;
$( = $);

if (!($listname =~ /^([a-z0-9]+)$/)) {
    die "List name is incorrect.";
}
$listname=$1;

exec($M_PATH." -a '".quotemeta($listname)."'");

0;
